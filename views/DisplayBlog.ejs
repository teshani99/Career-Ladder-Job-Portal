        <!-- SNEWS BLOG -->
        
		<section class="news-single section">
			<div class="container">
				<div class="row">
					<div class="col-lg-8 col-12">
						<div class="row">
							
							<div class="col-12">
                                <div class="container mt-5" >
                                    
                                    <% if (blogs.length === 0) { %>
                                        <p>No blogs to display.</p>
                                    <% } else { %>
                                        <div class="single-main">
                                            <% blogs.forEach(blog => { %>
                                                
                                                    
                                                       
                                                            <h1 class="news-title"><%= blog.blogtitle %></h1>
                                                        
                                                        <div class="news-head">
                                                        <img src="/upload/<%= blog.blogimage %>" class="card-img-top" alt="Blog image" >
                                                    </div>
                                                    
                                                        <div class="meta">
                                                            <div class="meta-left">
                                                                <span class="author">
                                                                    <a href="#"><i class="fa fa-user"></i><%= blog.blogauthor %></a>
                                                                </span>
                                                                <span class="date">
                                                                    <i class="fa fa-calendar"></i><%= new Date(blog.blogdate).toLocaleDateString() %>
                                                                </span>
                                                                <a href="/blogsuser/<%= blog._id %>" class="btn btn-danger">Read more</a>
                                                            </div>
                                                        </div>

                                                    
                                             
                                            <% }) %>
                                        </div>
                                    <% } %>
                                </div>
							  </div>

							
							
						</div>
					</div>
					<div class="col-lg-4 col-12">
						<div class="main-sidebar">
							<!-- Single Widget -->
							<div class="single-widget search">
